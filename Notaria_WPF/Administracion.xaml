        <Label x:Name="lb_ing_comE" Content="Seleccione la Comuna" HorizontalAlignment="Left" Margin="504,261,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Calibri" Width="242" Foreground="White" Visibility="Collapsed"/>
        <ComboBox x:Name="cbx_selc_empleado" HorizontalAlignment="Left" Margin="503,349,0,0" VerticalAlignment="Top" Width="242" Height="30" FontFamily="Calibri" FontSize="18" Background="#FFC6EEF7" Padding="5,4,0,4" Visibility="Collapsed"/>
