        <TextBox x:Name="txb_fono_empleado" HorizontalAlignment="Left" Margin="156,410,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" Height="30" FontFamily="Calibri" FontSize="18" Visibility="Collapsed" Background="#FFC6EEF7" Padding="5,4,0,4" />
        <TextBox x:Name="txb_dirc_empleado" HorizontalAlignment="Left" Margin="503,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" Height="30" FontFamily="Calibri" FontSize="18" Visibility="Collapsed" Background="#FFC6EEF7" BorderBrush="#FF283655" Padding="5,4,0,4"/>
        <TextBox x:Name="txb_email_empleado" HorizontalAlignment="Left" Margin="503,409,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" Height="30" FontFamily="Calibri" FontSize="18" Visibility="Collapsed" Background="#FFC6EEF7" Padding="5,4,0,4"/>
