        <ComboBox x:Name="cbx_Comuna_empleado" HorizontalAlignment="Left" Margin="503,290,0,0" Width="242" Height="30" FontFamily="Calibri" FontSize="18" Background="#FFC6EEF7" VerticalAlignment="Top" Padding="5,4,0,4" Visibility="Collapsed"/>
        <Label x:Name="lb_ing_regE" Content="Seleccione la Región" HorizontalAlignment="Left" Margin="503,204,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Calibri" Width="242" Foreground="White" Visibility="Collapsed"/>
