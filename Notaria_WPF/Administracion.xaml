        <Rectangle x:Name="rec_perfil" Margin="191,125,0,0" Fill="#FF283655" RadiusX="20" RadiusY="20" HorizontalAlignment="Left" Width="266" Height="307" VerticalAlignment="Top" Visibility="Collapsed"/>
