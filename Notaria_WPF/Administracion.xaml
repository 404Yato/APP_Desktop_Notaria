            <DataGrid.Columns>

                <DataGridTextColumn Header="Codigo de Perfil" Binding="{Binding cod_perfil}" />
                <DataGridTextColumn Header="Rol" Binding="{Binding rol}" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Cerrar sesión" Margin="0,9,37,0" VerticalAlignment="Top" Foreground="#FF00CCFF" FontSize="16" FontFamily="Calibri" HorizontalAlignment="Right" Width="105"/>
