        <Rectangle HorizontalAlignment="Left" Margin="101,69,0,0" Width="356" Fill="#FF00CCFF" Height="5" VerticalAlignment="Top"/>
        <Label x:Name="lb_titulo_perfil" Content="Gestión de Perfiles" Margin="200,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.44,0.547" Foreground="White" FontFamily="Calibri" FontSize="18" HorizontalAlignment="Left" Width="152" Visibility="Hidden"/>
